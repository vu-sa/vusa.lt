# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org
# Neovim 0.9+ has built-in support, older versions use editorconfig-vim plugin

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[Makefile]
indent_style = tab
